<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/mybackground"
    tools:context="com.example.liuyuqi.fontshow.MainActivity">

    <TextView
        android:text="@string/main_textView"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/colorbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView">
        <Button
            android:id="@+id/button_color1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/red"/>
        <Button
            android:id="@+id/button_color2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/gold"/>
        <Button
            android:id="@+id/button_color3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"/>
        <Button
            android:id="@+id/button_color4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/green"/>
        <Button
            android:id="@+id/button_color5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/cyan"/>
        <Button
            android:id="@+id/button_color6"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue"/>
        <Button
            android:id="@+id/button_color7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight= "1"
            android:layout_marginTop="10dp"
            android:background="@color/purple"/>
    </LinearLayout>
    <EditText
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="10pt"
        android:id="@+id/editText"
        android:textColor="@color/gold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colorbanner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendBanner"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/button_send"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/send_button"
            android:layout_marginRight="10dp"
            android:layout_weight= "0.3"
            android:textSize="7pt"
            android:background="@color/white"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button_1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:layout_marginRight="5dp"
            android:layout_weight= "1"
            android:background="@color/white"
            android:textSize="7pt"/>
        <Button
            android:id="@+id/button_2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2"
            android:layout_marginRight="5dp"
            android:layout_weight= "1"
            android:background="@color/white"
            android:textSize="7pt"/>
        <Button
            android:id="@+id/button_3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3"
            android:layout_marginRight="5dp"
            android:layout_weight= "1"
            android:background="@color/white"
            android:textSize="7pt"/>
        <Button
            android:id="@+id/button_4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4"
            android:layout_marginRight="5dp"
            android:layout_weight= "1"
            android:background="@color/white"
            android:textSize="7pt"/>
    </LinearLayout>
    <com.example.liuyuqi.fontshow.PaintView
        android:id="@+id/paintView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/editText"
        android:layout_above="@id/sendBanner"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <ListView
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/listView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
    <Button
        android:id="@+id/search_again"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:text="@string/search_again"
        android:background="@color/white"
        android:textSize="7pt"
        android:visibility="gone"/>
</RelativeLayout>
